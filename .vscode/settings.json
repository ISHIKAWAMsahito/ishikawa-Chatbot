{
  // ----------------------------------------------------------------
  // 全般的なエディタ設定
  // ----------------------------------------------------------------

  // ファイル保存時に自動でフォーマットを実行する
  "editor.formatOnSave": true,

  // ファイル保存時に行末の不要な空白を自動で削除する
  "files.trimTrailingWhitespace": true,

  // ----------------------------------------------------------------
  // Prettier と ESLint の設定 (主にJavaScript/Webフロント用)
  // ----------------------------------------------------------------

  // デフォルトのフォーマッターとしてPrettierを指定
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ファイル保存時にESLintによる自動修正を有効にする
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // ----------------------------------------------------------------
  // Python用の設定
  // ----------------------------------------------------------------

  // Pythonのフォーマッターとして "black" を使用する
  "python.formatting.provider": "black",

  // Pythonのリンター（文法チェッカー）として "flake8" を有効にする
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": true,

  // ----------------------------------------------------------------
  // 言語ごとの詳細設定
  // ----------------------------------------------------------------

  // Pythonファイル（.py）を開いているときの設定
  "[python]": {
    // Pythonファイルでは、フォーマッターとして "black" を使う
    "editor.defaultFormatter": "ms-python.python"
  },

  // JavaScriptファイル（.js）を開いているときの設定
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // HTMLファイル（.html）を開いているときの設定
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // CSSファイル（.css）を開いているときの設定
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSONファイル（.json）を開いているときの設定
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ----------------------------------------------------------------
  // ファイル/フォルダの除外設定
  // ----------------------------------------------------------------

  // エクスプローラー（ファイル一覧）から特定のフォルダ/ファイルを非表示にする
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/node_modules": true
  },

  // ファイル変更監視の対象から特定のフォルダを除外してパフォーマンスを向上させる
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/__pycache__/**": true
  }
}
